#!/usr/bin/env python3
import grimoire.toolbox as toolbox
import grimoire.genome as genome
import argparse

## Command line w/ Argparse ##
parser = argparse.ArgumentParser(description='Concatenate Files for Features')
parser.add_argument('--addfile', required=True, action='append',
	metavar='<path>', help='input file names. GFF/FASTA must have same name (%(type)li)')
arg = parser.parse_args()


def read_files(filenames):
    """Read in Files and output a list of all Chromosome objects"""

    all_chr = []

    for file in filenames:
        gff_file = str(file)+'.gff3'
        fasta_file = str(file)+'.fasta'
        gen = genome.Genome(gff3=gff_file,fasta=fasta_file)
        all_chr = all_chr + gen.chromosomes

    return all_chr

read_files(arg.addfile)
